<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gd.Final.Mapper.MovieFileMapper">
	<insert id="insertMovieFile" parameterType="com.gd.Final.dto.MovieFileDto">
		 INSERT INTO Movie_file (
			 movie_num
			 ,file_name
			 ,original_name
			 ,file_type
			 ,file_size
			 ,update_date
			 ,create_date
		 ) VALUES (
			 #{movieNum}
			 ,#{fileName}
			 ,#{originalName}
			 ,#{fileType}
			 ,#{fileSize}
			 ,NOW()
			 ,NOW()
		 )
	</insert>
	
	<update id="updateMovieFile" parameterType="com.gd.Final.dto.MovieFileDto">
		UPDATE Movie_file
		SET file_name = #{fileName}
			,original_name = #{originalName}
			,file_type = #{fileType}
			,file_size = #{fileSize}
			,update_date = NOW()	
			,create_date = NOW()
		WHERE file_no = #{fileNo}
	</update>
</mapper>